</nav>
 
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12" style="margin: auto;">
                <div class="text-center">
                    <h1>
                        List Of users
                    </h1>
                </div>
                
            </div>
        </div>

        <div class="row mt-5" style=" margin: auto;">
            <div class="col-md-12">
                <a href="/addUser" class="btn btn-primary mb-2 mt-2">Add User</a> 
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                          <th scope="col">Full Name</th> 
                          <th scope="col">Email</th>
                          <th scope="col">Address</th>
                          <th scope="col">Country</th> 
                          <th scope="col">Action</th> 
                        </tr>
                      </thead>
                      <tbody>

                        <%if(data) {%>
                            <%data.forEach((user) => {%>
                                <tr>
                                    <td><%=user.fname+" "+user.lname%></td>
                                    <td><%=user.email%></td>
                                    <td><%=user.address%></td>
                                    <td><%=user.country%></td>
                                    <td>
                                      <a href="/editUser/<%=user.id%>" class="btn btn-info"><i class="fa-solid fa-pencil"></i></a>
                                      <a href="/delUser/<%=user.id%>" class="btn btn-danger "><i class="fa-solid fa-trash"></i></a>
                                    </td>
                                  </tr>
                            <%})%>
                        <%}%> 
                      </tbody>
                </table>
            </div>
        </div>
    </div>

    
    <div class="container">
      <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
